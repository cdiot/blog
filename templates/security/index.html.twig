{% extends 'base.html.twig' %}

{% block title %}Se connecter
{% endblock %}

{% block content %}
	<section class="container py-5">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<h1 class="h3 mb-4">Connexion</h1>
				<!-- Form -->
				<form
					method="POST" action="/login">
					<!-- Mail input -->
					<div class="mb-3">
						<label for="mail" class="form-label">Adresse Mail</label>
						<input type="mail" name="mail" class="form-control" id="mail"/>
					</div>
					<!-- Mail input -->
					<!-- Password input -->
					<div class="mb-3">
						<label for="password" class="form-label">Mot de passe</label>
						<input type="password" name="password" class="form-control" id="password"/>
					</div>
					<!-- Password input -->
					<!-- Submit button -->
					<input
					type="submit" class="btn btn-primary" value="Se connecter"/>
				<!-- Submit button -->
				</form>
				<!-- Form -->
				<hr>
				<!-- Register link -->
				<h2 class="h4 text-center my-4">Première visite</h2>
				<div class="form-text mb-4">
					<p>Nouvel utilisateur ?
						<a href="/register">Créez un compte maintenant</a>
					</p>
				</div>
				<!-- Register link -->
			</div>
		</div>
	</section>
{% endblock %}
