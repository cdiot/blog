{% extends 'base.html.twig' %}

{% block title %}Ajouter un article
{% endblock %}

{% block content %}
	<section class="container py-5">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<h1 class="h3 mb-4">Modifier cette article</h1>
				<!-- Form -->
				<form
					method="POST" action="/admin/modify/{{ post.getId() }}">
					<!-- Title input -->
					<div class="mb-3">
						<label for="title" class="form-label">Titre</label>
						<input type="text" name="title" value="{{ post.getTitle() }}" class="form-control" id="title"/>
					</div>
					<!-- Title input -->
					<!-- Chapo input -->
					<div class="mb-3">
						<label for="excerpt" class="form-label">Chapo</label>
						<input type="text" name="excerpt" value="{{ post.getExcerpt() }}" class="form-control" id="excerpt"/>
					</div>
					<!-- Chapo input -->
					<!-- Message input -->
				<div class="mb-3">
					<label for="content" class="form-label">Contenu</label>
					<textarea id="content" name="content" class="form-control" rows="5" cols="33">{{ post.getContent() }}</textarea>
				</div>
				<!-- Message input -->
					<!-- Submit button -->
					<input
					type="submit" class="btn btn-primary" value="Mettre Ã  jour"/>
				<!-- Submit button -->
				</form>
				<!-- Form -->
			</div>
		</div>
	</section>
{% endblock %}
